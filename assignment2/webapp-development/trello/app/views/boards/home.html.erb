<div class="container">
    <% @boards_limited.each do |board| %>
        <div class="card" style="background-color: <%= board.color %>;">
          <div class="card-body d-flex flex-column justify-content-between">
            <h5 class="card-title"><%= board.name %></h5>
            <div class="text-center">
              <a href="#" class="card-link mt-auto"><%= link_to 'Go to', board_path(board), class: 'btn btn-secondary' %></a>
          </div>
        </div>
      </div>
    <% end %>
</div>