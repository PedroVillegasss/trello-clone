              <path d="M11 4H6C4.93913 4 3.92178 4.42142 3.17163 5.17157C2.42149 5.92172 2 6.93913 2 8V18C2 19.0609 2.42149 20.0783 3.17163 20.8284C3.92178 21.5786 4.93913 22 6 22H17C19.21 22 20 20.2 20 18V13" stroke="rgb(220, 38, 38)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
          <% end %>
        </h5>
        
        <% state.tasks.each do |task| %>  
          <div class="task-container">
            <%= link_to task_path(state_id: task.state.id, id: task.id), class: 'card-text', id: 'show-task-name', style: 'text-decoration: none;' do %>
              <div class="task-card">
                <div class="task-card-body" style="color: white; width: 180px">
                  <%= task.name %>
                </div>
              </div>
            <% end %>

            <div class="select">
              <select class="task-state-selector" style="background-color: rgba(133, 22, 22); color: white; border: none; border-radius: 5px; width: 18px; height: 40px ;margin-bottom: 10px" data-task-id="<%= task.id %>">
                <% @board.states.each do |state| %>
                  <option value="<%= state.id %>" <%= 'selected' if task.state_id == state.id %>><%= state.name %></option>
                <% end %>
              </select>
            </div>
          </div>
        <% end %>

        <div class="add-task-button-container">
          <%= link_to new_task_path(state_id: state.id), class: 'btn add-task-button', style: 'color: rgb(98,108,111); margin-left: -15px' do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="rgb(98,108,111)" class="bi bi-plus" viewBox="0 0 16 16">
              <path d="M8 7V4.5a.5.5 0 0 1 1 0V7h2.5a.5.5 0 0 1 0 1H9v2.5a.5.5 0 0 1-1 0V8H5.5a.5.5 0 0 1 0-1H8z"/>
            </svg>
            Add a task
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="home-card-container">
    <a href="<%= new_state_path(board_id: @board.id) %>" class="board-link">
      <div class="card" id="show-states-card">
        <div class="card-body">
          <h5 class="card-title" id="show-state-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="rgb(98,108,111)" class="bi bi-plus" viewBox="0 0 16 16">
              <path d="M8 7V4.5a.5.5 0 0 1 1 0V7h2.5a.5.5 0 0 1 0 1H9v2.5a.5.5 0 0 1-1 0V8H5.5a.5.5 0 0 1 0-1H8z"/>
            </svg>
            <span style="text-decoration: none"></span>
          </h5>
        </div>
      </div>
    </a>
  </div>
</div>

<%# https://stackoverflow.com/questions/44692446/rails-execute-an-ajax-call-via-select-dropdown-menu %>
<script>
    const taskStateSelectors = document.querySelectorAll(".task-state-selector");

    taskStateSelectors.forEach(selector => {
      selector.addEventListener("change", function(event) {
        const taskId = event.target.dataset.taskId;
        const newStateId = event.target.value;

        fetch(`/tasks/${taskId}`, {
          method: "PATCH",
          headers: {
            "X-Requested-With": "XMLHttpRequest",
            "Content-Type": "application/json",
            "X-CSRF-Token": "<%= form_authenticity_token %>"
          },
          body: JSON.stringify({ state_id: newStateId })
        })
        .then(response => {
          if (response.ok) {
          } else {
            window.location.reload();
          }
        window.location.reload();
        })
        });
      });
</script>

