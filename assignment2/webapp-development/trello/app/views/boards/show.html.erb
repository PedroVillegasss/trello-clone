              <path d="M6 12L18 12" stroke="rgb(133, 22, 22)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
          <% end %>

          <%= link_to edit_state_path(state), class: 'btn p-0 mr-2', style: 'color: rgb(220, 38, 38); font-weight: bold' do %>
