<div class="container">
<div id="show-board-card" class="card" style="margin-top: 20px; margin-bottom: 10px; color: black; height: 700px; margin-left: 10px; width: 960px; background-color: <%= @board.color %>;">    <div class="card-body d-flex flex-column">
      <h5 class="card-title" id="board-card-title"><%= @board.name %></h5>
      <div class="row">
        <% @board.states.each do |state| %>
          <div class="col-3">
            <div class="card text-center" id="show-state-card">
              <div class="card-body d-flex flex-column justify-content-center">
                <h6 class="card-title"><%= state.name %></h6>
                <% state.tasks.each do |task| %>
                  <div class="card text-center" id="show-task-card">
                    <div class="card-body d-flex flex-column justify-content-center">
                      <p class="card-text"><%= task.name %></p>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="text-center mt-auto">
        <a href="#" class="card-link"><%= link_to 'Go back', boards_path, class: 'btn btn-secondary' %></a>
      </div>
    
      </div>
  </div>
</div>
