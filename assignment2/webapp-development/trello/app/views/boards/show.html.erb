<div class="home-card-container" id="test-row">
  <% @board.states.each do |state| %>
    <div class="card" id="show-states-card">
      <div class="card-body">
        <h5 class="card-title" id="show-state-title">
          <%= state.name %>
          <%= link_to state, data: { turbo_confirm: 'Are you sure?', turbo_method: 'delete' }, class: 'btn p-0 ml-2', style: 'color: rgb(220, 38, 38); font-weight: bold' do %>
