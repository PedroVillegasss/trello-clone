<%# Ojo que para index uso @boards y no @boards_limited (revisar el controlador por si hay dudas en la diferencia) %>

<h1 id="boards-h1">All boards</h1>

<div class="container">
  <% @boards.each do |board| %>
    <div class="card mb-3" style="background-color: <%= board.color %>;">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title"><%= board.name %></h5>
        <div class="row">
          <% board.states.each do |state| %>
            <div class="col-3">
              <div class="card text-center" id="state-card" style="width: 150px; height: 350px; margin-right: 5px;">
                <div class="card-body d-flex flex-column justify-content-center">
                  <h6 class="card-title"><%= state.name %></h6>
                  <% state.tasks.each do |task| %>
                    <div class="card text-center" id="task-card" style="width: 100px; height: 50px; margin-top: 10px;">
                      <div class="card-body d-flex flex-column justify-content-center">
                        <p class="card-text"><%= task.name %></p>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="text-center mt-auto">
          <a href="#" class="card-link"><%= link_to 'Go to', board_path(board), class: 'btn btn-secondary' %></a>
        </div>
      </div>
    </div>
  <% end %>
</div>
