<div class="overlay-container">
  <div class="board-view">
    <%= render 'boards/show', board: @label.board %>
  </div>

  <div class="label-details", style="margin-top: -80px;">
    <div class="card" style="width: 20rem; height: 12rem; background-color: white;">
      <div class="card-body">
        <div class="d-flex" style="margin-left: 15px;">
          <div class="card" style="width: 20rem; height: 8px; background-color: <%= @label.color %>; margin-top: -7px; margin-bottom: 15px; margin-left: -15px">
            <div class="card-body p-2 text-center">
            </div>
          </div>
        </div>

        <h1 class="card-title"><%= @label.name %></h1>
        <p class="card-subtitle"><%= @label.user.name %></p>
        <br>
      </div>
      <div class="card-footer">
        <%= link_to 'Edit', edit_label_path(@label), class: 'btn btn-outline mr-2', style:'color:black ; border-color: black'%>
        <%= link_to 'Destroy', @label, data: { turbo_confirm: 'Are you sure?', turbo_method: "delete" }, class: 'btn btn-outline mr-2', style:'color:red ; border-color: red' %>
        <%= link_to 'Back', board_path(@label.board), class: 'btn btn-outline mr-2', style:'color:black ; border-color: black' %>
      </div>
    </div>
  </div>
</div>

